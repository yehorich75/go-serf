<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Document
        link(href="https://fonts.googleapis.com/css?family=Fira+Sans:100,300,400,500,800&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="css/style.min.css")
    body
        include includes/header.pug

        .container
            section.surf
                .title
                    span surf
                        h3 surf
                .surf__subtitle
                    .subtitle
                        .headline-left Current location
                        .subtitle__head California
                            span |

                include includes/slider-map.pug

                include includes/surf-slider.pug

            include includes/travel.pug

            section.sleep
                .container
                    .title
                        span sleep
                            h3 sleep
                    .sleep__slider
                        .sleep__slider-item.sleep-slider
                            .sleep-slider__head(style='background-image: url(img/sleep-slider.png);')
                                .sleep-slider__subtitle
                                    .subtitle
                                        .headline-left Resorts
                                        .subtitle__head Auberge
                                            span Australia
                            .sleep-slider__descr(style='background-image: url(img/);')
                                .descr
                                    .headline-right Airline
                                    .descr__head Virgin Australia
                                        img(src="img/star.svg" alt="")
                            .sleep-slider__info
                                .sleep-slider__info-item
                                    .sleep-slider__info-subtitle Resort
                                    .sleep-slider__info-title Auberge Australia
                                .sleep-slider__info-item
                                    .sleep-slider__info-subtitle # of Nights
                                    .sleep-slider__info-title 5 Nights
                                .sleep-slider__info-item
                                    .sleep-slider__info-subtitle # of Guests
                                    .sleep-slider__info-title 4 Guests
                                .sleep-slider__info-item
                                    .sleep-slider__info-subtitle Pricing
                                    .sleep-slider__info-title $349 USD
                                        span Per Night
                            .sleep-slider__btn
                                a.btn(href="#" tabindex="0") Book
                                    span Stay

            section.shop
                .title
                    span shop
                    h3 shop

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js')
        script(src='js/libs.min.js')
        script(src='js/main.js')

